@using MvcFilmDunyasi.Data
@model Film
@{
    ViewBag.Title = "Sil";
}

<form asp-action="SilOnay" asp-controller="Filmler" method="post">
    <input asp-for="Id" type="hidden" />
    <p>@Model.Ad (@Model.Yil) (@Model.Puan) filmini silmek istiyor musunuz?</p>
    <div>
        <button class="btn btn-primary">Evet</button>
        <a asp-action="Index" class="btn btn-danger">Vazgeç</a>
    </div>
</form>
