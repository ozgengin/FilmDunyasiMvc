@using MvcFilmDunyasi.Data
@model YeniFilmViewModel
@{
    ViewBag.Title = "Yeni Film";
}

<h1>Yeni Film</h1>

<form asp-controller="Filmler" asp-action="Yeni" method="post">
    <div class="mb-2">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" type="text"/>
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Yil"></label>
        <input asp-for="Yil" class="form-control" type="text" />
        <span asp-validation-for="Yil" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Puan"></label>
        <input asp-for="Puan" class="form-control" type="text" />
        <span asp-validation-for="Puan" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <div class="row">
            @foreach (Tur tur in ViewBag.Turler)
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <label class="d-flex align-items-center">
                        <input type="checkbox" name="turler" value="@tur.Id" class="me-1" @(Model.Turler.Contains(tur.Id)? "checked":"")/>
                        @tur.Ad
                    </label>
                </div>
            }
        </div>
       
    </div>
    <button class="btn btn-primary">Ekle</button>
</form>